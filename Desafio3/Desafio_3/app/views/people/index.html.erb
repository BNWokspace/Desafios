<header class="standard-content header">
<h1>CLIENTES</h1>
<%= render 'layouts/navbar' %>

</header>
<p id="notice"><%= notice %></p>

<section class="standard-content table-section">

<table class="sortable table table-bordered" >
  <thead>
    <tr>
    <th scope="col">CLIENTE</th>
    <th scope="col"> ID </th>
    <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.id %></td>
        <td class="act-btn"><%= link_to 'Mostrar', person , class: "btn btn-success"  %>
        <%= link_to 'Editar', edit_person_path(person) , class: "btn btn-warning"  %>
        <%= link_to 'Excluir', person, method: :delete, data: { confirm: 'VocÃª tem certeza?' } , class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Cliente', new_person_path , class: 'btn btn-outline-primary rails-btn' %>
</section>